{
    "include": [
        "./src/*"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "outDir": "./dist",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ]
    }
}